@page "/"
@inherits ComponentBase

<h1>Taux de Change</h1>

<select @bind="baseCurrency">
    @foreach (var currency in allCurrencies)
    {
        <option value="@currency">@currency</option>
    }
</select>
<button @onclick="GetRates">Afficher les taux</button>
<button @onclick="ToggleView">
    @(showFavoritesOnly ? "Afficher tout" : "Afficher uniquement les favoris")
</button>

@if (rates != null)
{
    <table class="exchange-table">
        <thead>
        <tr>
            <th>Devise</th>
            <th>Taux</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var rate in FilteredRates())
        {
            <tr>
                <td>@rate.Key</td>
                <td>@rate.Value</td>
                <td>
                    <button class="btn-favorite" @onclick="() => ToggleFavorite(rate.Key)">
                        @(IsFavorite(rate.Key) ? "★" : "☆")
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>Aucun taux disponible.</p>
}